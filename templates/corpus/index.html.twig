{% extends 'base.html.twig' %}

{% block title %}Corpus index{% endblock %}

{% block body %}
    <h1>Corpus index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Slug</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for corpu in corpuses %}
            <tr>
                <td>{{ corpu.id }}</td>
                <td>{{ corpu.title }}</td>
                <td>{{ corpu.description }}</td>
                <td>{{ corpu.slug }}</td>
                <td>
                    <a href="{{ path('app_corpus_show', {'id': corpu.id}) }}">show</a>
                    <a href="{{ path('app_corpus_edit', {'id': corpu.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_corpus_new') }}">Create new</a>
{% endblock %}
